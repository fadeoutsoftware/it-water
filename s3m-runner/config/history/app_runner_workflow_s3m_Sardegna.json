{
  "__comment__": "configuration file for the s3m runner information",
  "settings": {
    "priority": {
      "reference": "environment",
      "other": "user"
    },
    "flags": {
      "update_namelist": true,
      "update_execution": true
    },
    "variables": {
      "lut": {
        "user": {
          "time_run": "{time_run}",
          "time_restart": "{time_restart}",
          "time_start": null,
          "time_end": null,
          "time_period": 5,
          "time_rounding": "H",
          "time_frequency": "H",
          "file_namelist": "{execution_name}_{domain_name}.namelist",
          "file_log": "{execution_name}_{domain_name}.log",
          "execution_name": "exec_base_s3m",
          "execution_mode": "deterministic",
          "restart": 0
        },
        "environment": {
          "domain_name": "DOMAIN_NAME",
          "path_source": "PATH_SRC",
          "path_destination": "PATH_DST",
          "time_run": "TIME_RUN",
          "time_restart": "TIME_RESTART",
          "time_end": "TIME_END",
          "time_period": "TIME_PERIOD",
          "path_app": "PATH_APP",
          "path_log": "PATH_LOG",
          "path_namelist": "PATH_NAMELIST",
          "restart" : "S3M_RESTART"        
        }
      },
      "format": {
        "domain_name": "string",
        "path_source": "string",
        "path_destination": "string",
        "time_run": "timestamp",
        "time_restart": "timestamp",
        "time_period": "int",
        "time_start": "string",
        "time_end": "string",
        "time_rounding": "string",
        "time_frequency": "string",
        "path_app": "string",
        "path_log": "string",
        "file_log": "string",
        "path_namelist": "string",
        "file_namelist": "string",
        "execution_name": "string",
        "execution_mode": "string",
        "restart": "int"
      },
      "template": {
        "domain_name": "string",
        "path_source": "string",
        "path_destination": "string",
        "time_run": "%Y%m%d%H00",
        "time_restart": "%Y%m%d%H00",
        "time_period": "int",
        "time_start": "%Y%m%d%H00",
        "time_end": "%Y%m%d%H00",
        "time_rounding": "string",
        "time_frequency": "string",
        "path_app": "string",
        "path_log": "string",
        "file_log": "string",
        "path_namelist": "string",
        "file_namelist": "string",
        "execution_name": "string",
        "execution_mode": "string",
        "restart": "int"
      }
    }
  },
  "namelist": {
    "description": {
      "version": "5.3.3",
      "type": "s3m"
    },
    "file": {
      "template": "s3m.template.info.v5.3.3.txt",
      "project": "{path_app}/{file_namelist}"
    },
    "fields": {
      "by_value": {
        "sDomainName": "{domain_name}",
        "sPathData_Static_Gridded": "{path_source}/static/",
        "sPathData_Forcing_Gridded": "{path_source}/$yyyy/$mm/$dd/",
        "sPathData_Updating_Gridded": "NOTUSED",
        "sPathData_Output_Gridded": "{path_destination}/$yyyy/$mm/$dd/",
        "sPathData_Restart_Gridded": "{path_destination}/$yyyy/$mm/$dd/",
        "sPathData_SWE_Assimilation_Gridded": "NOTUSED",
        "sTimeStart": "{time_run}",
        "sTimeRestart": "{time_restart}",
        "iSimLength": "{time_period}",
        "iFlagRestart": "{restart}",
        "iFlagThickFromTerrData": "{restart}",  
        "iFlagSnowAssim": 0,
        "iFlagIceMassBalance": 2,
        "iFlagGlacierDebris": 1,
        "a1dGeoForcing": [
          38.857967,
          8.131511
        ],
        "a1dResForcing": [
          0.002582,
          0.002582
        ],
        "a1iDimsForcing": [
          1214,
          840          
        ]
      },
      "by_pattern": {
        "pattern_dt": {
          "active": true,
          "template": "iDt",
          "value": 3600
        },
        "pattern_path_data": {
          "active": true,
          "template": "sPathData",
          "value": "{path_source}/tmp/"
        }
      }
    }
  },
  "application": {
    "description": {
      "execution_name": "{execution_name}",
      "execution_mode": "{execution_mode}"
    },
    "executable": {
      "location": "{path_app}/S3M_Model_V534_{execution_name}.x",
      "arguments": "{path_app}/{file_namelist}"
    },
    "info": {
      "location": "/$HOME/run_base/exec/S3M_Model_V534_{execution_name}_{execution_mode}.info"
    },
    "library": {
      "location": "/app/library/package_hmc/s3m/S3M_Model_V5_3_4.x",
      "dependencies": [
        "/app/library/libs_system/nc4/lib/"
      ]
    }
  },
  "configuration": {
    "time_run": "{time_run}",
    "time_restart": "{time_restart}",
    "time_period": "{time_period}",
    "time_start": "{time_start}",
    "time_end": "{time_end}",
    "time_rounding": "{time_rounding}",
    "domain_name": "{domain_name}",
    "path_app": "{path_app}",
    "path_source": "{path_source}",
    "path_destination": "{path_destination}",
    "file_namelist": "{file_namelist}",
    "path_namelist": "{path_app}",
    "file_log": "{file_log}",
    "path_log": "{path_app}",
    "file_tmp": null,
    "path_tmp": "{path_app}",
    "execution_name": "{execution_name}",
    "execution_mode": "{execution_mode}",
    "restart": "{restart}"
  }
}